{
  "name": "@project-init/tommon",
  "version": "VERSION",
  "description": "Common Typescript Library for interacting with Project Init Modules.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-init/tommon.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./*/*": {
      "types": "./dist/*/*.d.ts",
      "import": "./dist/*/*.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "sort-package-json && prettier --write .",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "singleQuote": true
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "~4.7.1",
    "@types/bun": "^1.3.9",
    "prettier": "~3.8.1",
    "prettier-plugin-packagejson": "~3.0.0",
    "typescript": "~5.9.3"
  }
}
