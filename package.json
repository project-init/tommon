{
  "name": "@project-init/tommon",
  "version": "VERSION",
  "description": "Common Typescript Library for interacting with Project Init Modules.",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-init/tommon.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./cfg": {
      "types": "./src/cfg/index.ts",
      "import": "./dist/cfg/index.js"
    },
    "./errors": {
      "types": "./src/errors/index.ts",
      "import": "./dist/errors/index.js"
    }
  },
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "scripts": {
    "build": "tsc && rm -rf dist && bun build ./src/index.ts ./src/cfg/index.ts ./src/errors/index.ts --outdir ./dist --target bun --format esm --splitting",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "prettier": {
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-packagejson"
    ],
    "singleQuote": true
  },
  "devDependencies": {
    "@connectrpc/connect": "^2.1.1",
    "@ianvs/prettier-plugin-sort-imports": "~4.7.1",
    "@types/bun": "~1.3.9",
    "prettier": "~3.8.1",
    "prettier-plugin-packagejson": "~3.0.0",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "@connectrpc/connect": "^2.1.1"
  },
  "peerDependenciesMeta": {
    "@connectrpc/connect": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
